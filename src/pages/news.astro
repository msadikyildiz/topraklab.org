---
import PageLayout from '../layouts/PageLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import media from '../data/media.json';
---

<PageLayout title="News | Toprak Lab" description="Media coverage and news mentions of the Toprak Lab's research.">
  <section class="section">
    <div class="container">
      <SectionHeading text="News in the Media" />

      <ul class="media-list">
        {media.map((m) => (
          <li class="media-entry">
            <p class="media-entry__citation">
              {m.url ? (
                <a href={m.url} class="media-entry__outlet" target="_blank" rel="noopener noreferrer">
                  {m.outlet}
                </a>
              ) : (
                <span class="media-entry__outlet">{m.outlet}</span>
              )}
              <br />
              <span class="media-entry__title">{m.title}{m.description ? ` â€” ${m.description}` : ''}</span>
              <br />
              <span class="media-entry__detail">
                {m.type}{m.year ? `, ${m.year}` : ''}.
              </span>
            </p>
          </li>
        ))}
      </ul>
    </div>
  </section>
</PageLayout>

<style>
  .media-list {
    max-width: 640px;
    margin-inline: auto;
  }

  .media-entry {
    padding: 0.75rem 0 0.75rem 0.75rem;
    border-left: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .media-entry:hover {
    border-left-color: var(--color-accent);
  }

  .media-entry__citation {
    font-size: var(--size-sm);
    line-height: 1.6;
    margin-bottom: 0;
  }

  .media-entry__outlet {
    font-weight: 600;
    color: var(--color-gray-900);
  }

  a.media-entry__outlet:hover {
    color: var(--color-navy-light);
  }

  .media-entry__title {
    color: var(--color-gray-600);
  }

  .media-entry__detail {
    font-style: italic;
    color: var(--color-gray-300);
  }
</style>
