---
import PageLayout from '../layouts/PageLayout.astro';
import PublicationEntry from '../components/PublicationEntry.astro';
import pubs from '../data/publications.json';
---

<PageLayout title="Publications | Toprak Lab" description="Publications from the Toprak Lab covering systems biology, single molecule biophysics, and theoretical physics.">
  <section class="section">
    <div class="container">
      <h2 class="subsection-heading">Systems Biology</h2>
      <ol class="pub-list" reversed>
        {pubs.systemsBiology.map((p) => (
          <PublicationEntry
            authors={p.authors}
            title={p.title}
            journal={p.journal}
            year={p.year}
            url={p.url}
          />
        ))}
      </ol>

      <h2 class="subsection-heading">Single Molecule Biophysics</h2>
      <ol class="pub-list" reversed>
        {pubs.singleMolecule.map((p) => (
          <PublicationEntry
            authors={p.authors}
            title={p.title}
            journal={p.journal}
            year={p.year}
            url={p.url}
          />
        ))}
      </ol>

      <h2 class="subsection-heading">Theoretical Physics</h2>
      <ol class="pub-list" reversed>
        {pubs.theoreticalPhysics.map((p) => (
          <PublicationEntry
            authors={p.authors}
            title={p.title}
            journal={p.journal}
            year={p.year}
            url={p.url}
          />
        ))}
      </ol>
    </div>
  </section>
</PageLayout>

<style>
  .subsection-heading {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .subsection-heading:first-of-type {
    margin-top: 0;
  }

  .pub-list {
    list-style: none;
  }
</style>
