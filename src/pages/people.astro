---
import PageLayout from '../layouts/PageLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import PersonCard from '../components/PersonCard.astro';
import { Image } from 'astro:assets';
import people from '../data/people.json';

import piPhoto from '../assets/images/people/erdal-toprak.jpg';
import erdalImg from '../assets/images/people/erdal-toprak-small.jpg';
import adamImg from '../assets/images/people/adam-lyon.jpg';
import alanImg from '../assets/images/people/alan-katz.jpg';
import fatmaImg from '../assets/images/people/fatma-coskun.png';
import ilonaImg from '../assets/images/people/ilona-gaszek.jpg';
import sadikImg from '../assets/images/people/sadik-yildiz.jpg';
import aihberImg from '../assets/images/people/aihber-khan.jpg';

const imageMap: Record<string, ImageMetadata> = {
  'erdal-toprak-small.jpg': erdalImg,
  'adam-lyon.jpg': adamImg,
  'alan-katz.jpg': alanImg,
  'fatma-coskun.png': fatmaImg,
  'ilona-gaszek.jpg': ilonaImg,
  'sadik-yildiz.jpg': sadikImg,
  'aihber-khan.jpg': aihberImg,
};
---

<PageLayout title="People | Toprak Lab" description="Current lab members and alumni of the Toprak Lab at UT Southwestern Medical Center.">
  <section class="section">
    <div class="container">
      <SectionHeading text="Meet the PI" />

      <div class="pi-layout">
        <div class="pi-layout__photo">
          <Image src={piPhoto} alt="Erdal Toprak, Ph.D." width={227} height={227} />
        </div>
        <div class="pi-layout__bio">
          <h2 class="pi-name">Erdal Toprak, Ph.D.</h2>
          <p class="pi-title">Associate Professor<br />Southwestern Medical Foundation Scholar in Biomedical Research</p>
          <p>
            Erdal Toprak received his Ph.D. in Computational Biology and Biophysics in 2007 from the University of Illinois at Urbana-Champaign where he studied motility mechanisms of molecular motor proteins with Paul R. Selvin. He then moved to Roy Kishony's Lab at Harvard Medical School as a postdoctoral research fellow and studied evolution of antibiotic resistance. Dr. Toprak joined UTSW in 2014.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <SectionHeading text="People" />

      <div class="people-grid">
        {people.current.map((p) => (
          <PersonCard
            name={p.name}
            role={p.role}
            imageSrc={p.image ? imageMap[p.image] : undefined}
          />
        ))}
      </div>

      <div class="people-links">
        <a href="/photos/">Photos from the Lab</a>
        <a href="/past-visitors/">Past Visitors</a>
      </div>
    </div>
  </section>

  <section class="section section--alt">
    <div class="container">
      <h2 class="alumni-heading">UT Southwestern Alumni</h2>
      <ul class="alumni-list">
        {people.utswAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>

      <h2 class="alumni-heading">Other Students &amp; Interns</h2>
      <ul class="alumni-list">
        {people.otherAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>

      <h2 class="alumni-heading">Sabanci University Alumni</h2>
      <ul class="alumni-list">
        {people.sabanciAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>
    </div>
  </section>
</PageLayout>

<style>
  .pi-layout {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2.5rem;
    align-items: start;
  }

  .pi-layout__photo img {
    width: 227px;
    height: 227px;
    object-fit: cover;
  }

  .pi-name {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 600;
    text-transform: none;
    letter-spacing: normal;
    margin-bottom: 0.25rem;
  }

  .pi-title {
    font-size: var(--size-sm);
    color: var(--color-gray-300);
    margin-bottom: 1.25rem;
  }

  @media (max-width: 600px) {
    .pi-layout {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .pi-layout__photo {
      display: flex;
      justify-content: center;
    }
  }

  .people-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem 2.5rem;
    margin-bottom: 2.5rem;
  }

  .people-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .people-links a {
    font-family: var(--font-heading);
    font-size: var(--size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-navy);
    border-bottom: 1px solid var(--color-gray-100);
    padding-bottom: 2px;
  }

  .people-links a:hover {
    border-bottom-color: var(--color-accent);
  }

  .alumni-heading {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-900);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .alumni-heading:first-child {
    margin-top: 0;
  }

  .alumni-list {
    margin-bottom: 1rem;
  }

  .alumni-list li {
    font-size: var(--size-sm);
    padding: 0.375rem 0;
    color: var(--color-gray-600);
  }

  .alumni-list li strong {
    color: var(--color-gray-900);
  }
</style>
