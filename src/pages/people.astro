---
import PageLayout from '../layouts/PageLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import PersonAvatar from '../components/PersonAvatar.astro';
import PersonFeature from '../components/PersonFeature.astro';
import PersonCard from '../components/PersonCard.astro';
import people from '../data/people.json';

// Auto-discover all people images
const allImages = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/people/*.{jpg,png,webp}',
  { eager: true }
);

function resolveImage(filename?: string): ImageMetadata | undefined {
  if (!filename) return undefined;
  const key = Object.keys(allImages).find((k) => k.endsWith(`/${filename}`));
  return key ? allImages[key].default : undefined;
}

const piImage = resolveImage('erdal-toprak.jpg');

// Split current members into featured (have bio) and regular
const featured = people.current.filter((p: any) => p.bio);
const regular = people.current.filter((p: any) => !p.bio);
---

<PageLayout title="People | Toprak Lab" description="Current lab members and alumni of the Toprak Lab at UT Southwestern Medical Center.">
  <section class="section">
    <div class="container">
      <SectionHeading text="Meet the PI" />

      <div class="pi-layout">
        <div class="pi-layout__photo">
          <PersonAvatar name="Erdal Toprak" imageSrc={piImage} size="lg" />
        </div>
        <div class="pi-layout__bio">
          <h2 class="pi-name">Erdal Toprak, Ph.D.</h2>
          <p class="pi-title">Associate Professor<br />Southwestern Medical Foundation Scholar in Biomedical Research</p>
          <p>
            Erdal Toprak received his Ph.D. in Computational Biology and Biophysics in 2007 from the University of Illinois at Urbana-Champaign where he studied motility mechanisms of molecular motor proteins with Paul R. Selvin. He then moved to Roy Kishony's Lab at Harvard Medical School as a postdoctoral research fellow and studied evolution of antibiotic resistance. Dr. Toprak joined UTSW in 2014.
          </p>
        </div>
      </div>

      {featured.length > 0 && (
        <div class="featured-members">
          {featured.map((p: any) => (
            <PersonFeature
              name={p.name}
              role={p.role}
              bio={p.bio}
              imageSrc={resolveImage(p.image)}
            />
          ))}
        </div>
      )}

      <h2 class="team-heading">Lab Members</h2>

      <div class="people-grid">
        {regular.map((p: any) => (
          <PersonCard
            name={p.name}
            role={p.role}
            imageSrc={resolveImage(p.image)}
          />
        ))}
      </div>

      <div class="people-links">
        <a href="/photos/">Photos from the Lab</a>
        <a href="/past-visitors/">Past Visitors</a>
      </div>
    </div>
  </section>

  <section class="section section--alt">
    <div class="container">
      <h2 class="alumni-heading">UT Southwestern Alumni</h2>
      <ul class="alumni-list">
        {people.utswAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>

      <h2 class="alumni-heading">Other Students &amp; Interns</h2>
      <ul class="alumni-list">
        {people.otherAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>

      <h2 class="alumni-heading">Sabanci University Alumni</h2>
      <ul class="alumni-list">
        {people.sabanciAlumni.map((a) => (
          <li><strong>{a.name}</strong> &mdash; {a.role}</li>
        ))}
      </ul>
    </div>
  </section>
</PageLayout>

<style>
  /* Tighten SectionHeading margin on this page */
  .section :global(.section-heading) {
    margin-bottom: 1.5rem;
  }

  .pi-layout {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2.5rem;
    align-items: start;
  }

  .pi-name {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 600;
    text-transform: none;
    letter-spacing: normal;
    margin-bottom: 0.25rem;
  }

  .pi-title {
    font-size: var(--size-sm);
    color: var(--color-gray-300);
    margin-bottom: 1.25rem;
  }

  @media (max-width: 600px) {
    .pi-layout {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .pi-layout__photo {
      display: flex;
      justify-content: center;
    }
  }

  .featured-members {
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-100);
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .team-heading {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-900);
    margin-top: 2.5rem;
    margin-bottom: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .people-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem 2.5rem;
    margin-bottom: 2.5rem;
  }

  .people-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .people-links a {
    font-family: var(--font-heading);
    font-size: var(--size-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-navy);
    border-bottom: 1px solid var(--color-gray-100);
    padding-bottom: 2px;
  }

  .people-links a:hover {
    border-bottom-color: var(--color-accent);
  }

  .alumni-heading {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gray-900);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .alumni-heading:first-child {
    margin-top: 0;
  }

  .alumni-list {
    margin-bottom: 1rem;
  }

  .alumni-list li {
    font-size: var(--size-sm);
    padding: 0.375rem 0;
    color: var(--color-gray-600);
  }

  .alumni-list li strong {
    color: var(--color-gray-900);
  }
</style>
