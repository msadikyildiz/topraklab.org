---
import PageLayout from '../layouts/PageLayout.astro';
import funding from '../data/funding.json';
---

<PageLayout title="Funding | Toprak Lab" description="Current and past funding sources for the Toprak Lab at UT Southwestern Medical Center.">
  <section class="section">
    <div class="container">
      <h2 class="subsection-heading">Current Funding</h2>
      <ul class="funding-list">
        {funding.current.map((f) => (
          <li>{f}</li>
        ))}
      </ul>

      <h2 class="subsection-heading">Past Funding</h2>
      <ul class="funding-list">
        {funding.past.map((f) => (
          <li>{f}</li>
        ))}
      </ul>
    </div>
  </section>
</PageLayout>

<style>
  .subsection-heading {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .subsection-heading:first-of-type {
    margin-top: 0;
  }

  .funding-list li {
    padding: 0.5rem 0;
    padding-left: 1rem;
    border-left: 2px solid var(--color-gray-100);
    font-size: var(--size-base);
    color: var(--color-gray-600);
    margin-bottom: 0.25rem;
  }
</style>
