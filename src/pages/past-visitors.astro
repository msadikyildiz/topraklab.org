---
import PageLayout from '../layouts/PageLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import PersonCard from '../components/PersonCard.astro';
import visitors from '../data/visitors.json';

import ericImg from '../assets/images/visitors/eric-jakobsson.jpg';
import fyodorImg from '../assets/images/visitors/fyodor-kondrashov.jpg';
import michaelImg from '../assets/images/visitors/michael-lynch.jpg';
import jeffImg from '../assets/images/visitors/jeff-gore.jpg';
import maitreyaImg from '../assets/images/visitors/maitreya-dunham.jpg';
import dmitriImg from '../assets/images/visitors/dmitri-petrov.jpg';
import shelleyImg from '../assets/images/visitors/shelley-copley.jpg';
import rylandImg from '../assets/images/visitors/ryland-young.jpg';
import breeImg from '../assets/images/visitors/bree-aldridge.jpg';

const imageMap: Record<string, ImageMetadata> = {
  'eric-jakobsson.jpg': ericImg,
  'fyodor-kondrashov.jpg': fyodorImg,
  'michael-lynch.jpg': michaelImg,
  'jeff-gore.jpg': jeffImg,
  'maitreya-dunham.jpg': maitreyaImg,
  'dmitri-petrov.jpg': dmitriImg,
  'shelley-copley.jpg': shelleyImg,
  'ryland-young.jpg': rylandImg,
  'bree-aldridge.jpg': breeImg,
};
---

<PageLayout title="Past Visitors | Toprak Lab" description="Distinguished scientists who have visited the Toprak Lab.">
  <section class="section">
    <div class="container">
      <SectionHeading text="Past Visitors" />

      <div class="visitors-grid">
        {visitors.map((v) => (
          <div class="visitor-card">
            <PersonCard
              name={v.name}
              role={v.date}
              imageSrc={v.image ? imageMap[v.image] : undefined}
            />
          </div>
        ))}
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .visitors-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    justify-items: center;
  }

  @media (max-width: 600px) {
    .visitors-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 380px) {
    .visitors-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
