---
import PageLayout from '../layouts/PageLayout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import PhotoGallery from '../components/PhotoGallery.astro';

import lab1 from '../assets/images/lab-photos/lab-photo-1.jpg';
import lab2 from '../assets/images/lab-photos/lab-photo-2.jpg';
import lab3 from '../assets/images/lab-photos/lab-photo-3.jpg';
import lab4 from '../assets/images/lab-photos/lab-photo-4.jpg';
import lab5 from '../assets/images/lab-photos/lab-photo-5.jpg';
import lab6 from '../assets/images/lab-photos/lab-photo-6.jpg';
import lab7 from '../assets/images/lab-photos/lab-photo-7.jpg';
import lab8 from '../assets/images/lab-photos/lab-photo-8.jpg';
import lab9 from '../assets/images/lab-photos/lab-photo-9.jpg';

const photos = [
  { src: lab1, alt: 'Lab photo 1' },
  { src: lab2, alt: 'Lab photo 2' },
  { src: lab3, alt: 'Lab photo 3' },
  { src: lab4, alt: 'Lab photo 4' },
  { src: lab5, alt: 'Lab photo 5' },
  { src: lab6, alt: 'Lab photo 6' },
  { src: lab7, alt: 'Lab photo 7' },
  { src: lab8, alt: 'Lab photo 8' },
  { src: lab9, alt: 'Lab photo 9' },
];
