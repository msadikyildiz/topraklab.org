---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  imageSrc?: ImageMetadata;
  size?: 'sm' | 'md' | 'lg';
}

const { name, imageSrc, size = 'md' } = Astro.props;

const sizes = { sm: 72, md: 120, lg: 180 };
const diameter = sizes[size];
---

{imageSrc ? (
  <Image
    src={imageSrc}
    alt={name}
    width={diameter}
    height={diameter}
    class:list={['avatar', `avatar--${size}`]}
  />
) : (
  <div class:list={['avatar', 'avatar--placeholder', `avatar--${size}`]} aria-hidden="true">
    <span>{name.charAt(0)}</span>
  </div>
)}

<style>
  .avatar {
    border-radius: 50%;
    object-fit: cover;
    object-position: center 20%;
    display: block;
    flex-shrink: 0;
    /* Thin inset shadow gives the circle subtle definition against any background */
    box-shadow:
      inset 0 0 0 1px rgba(0, 46, 93, 0.08),
      0 1px 3px rgba(0, 0, 0, 0.06);
  }

  .avatar--sm {
    width: 72px;
    height: 72px;
  }

  .avatar--md {
    width: 120px;
    height: 120px;
  }

  .avatar--lg {
    width: 180px;
    height: 180px;
    box-shadow:
      inset 0 0 0 1px rgba(0, 46, 93, 0.08),
      0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .avatar--placeholder {
    background-color: var(--color-off-white);
    border: 1px solid var(--color-gray-100);
    box-shadow: none;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-weight: 300;
    color: var(--color-gray-300);
    letter-spacing: 0.02em;
  }

  .avatar--placeholder.avatar--sm span {
    font-size: 1.5rem;
  }

  .avatar--placeholder.avatar--md span {
    font-size: 2.25rem;
  }

  .avatar--placeholder.avatar--lg span {
    font-size: 3.5rem;
  }
</style>
