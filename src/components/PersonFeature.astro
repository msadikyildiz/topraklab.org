---
import PersonAvatar from './PersonAvatar.astro';

interface Props {
  name: string;
  role: string;
  bio?: string;
  imageSrc?: ImageMetadata;
}

const { name, role, bio, imageSrc } = Astro.props;
---

<div class:list={['person-feature', { 'person-feature--compact': !bio }]}>
  <div class="person-feature__avatar">
    <PersonAvatar name={name} imageSrc={imageSrc} size="lg" />
  </div>
  <div class="person-feature__info">
    <h3 class="person-feature__name">{name}</h3>
    <p class:list={['person-feature__role', { 'person-feature__role--terminal': !bio }]}>{role}</p>
    {bio && <p class="person-feature__bio">{bio}</p>}
  </div>
</div>

<style>
  .person-feature {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 2.5rem;
    align-items: start;
  }

  .person-feature__name {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 600;
    text-transform: none;
    letter-spacing: normal;
    color: var(--color-gray-900);
    margin-bottom: 0.25rem;
  }

  .person-feature__role {
    font-size: var(--size-sm);
    color: var(--color-gray-300);
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-gray-100);
  }

  .person-feature__role--terminal {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .person-feature--compact .person-feature__info {
    align-self: center;
  }

  .person-feature__bio {
    font-size: var(--size-sm);
    line-height: 1.7;
    color: var(--color-gray-600);
  }

  @media (max-width: 600px) {
    .person-feature {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .person-feature__avatar {
      display: flex;
      justify-content: center;
    }
  }
</style>
