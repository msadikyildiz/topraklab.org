---
import PersonAvatar from './PersonAvatar.astro';
import people from '../data/people.json';

interface Props {
  area: string;
}

const { area } = Astro.props;

// Glob all people images
const allImages = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/people/*.{jpg,png,webp}',
  { eager: true }
);

function resolveImage(filename?: string): ImageMetadata | undefined {
  if (!filename) return undefined;
  const key = Object.keys(allImages).find((k) => k.endsWith(`/${filename}`));
  return key ? allImages[key].default : undefined;
}

// PI is always included
const piImage = resolveImage('erdal-toprak.jpg');

// Filter current members by research area
const researchers = people.current.filter(
  (p: any) => p.researchAreas && p.researchAreas.includes(area)
);
---

<div class="research-team">
  <h3 class="research-team__heading">Researchers</h3>
  <div class="research-team__row">
    <div class="research-team__person">
      <PersonAvatar name="Erdal Toprak" imageSrc={piImage} size="sm" />
      <span class="research-team__name">Erdal</span>
    </div>
    {researchers.map((p: any) => (
      <div class="research-team__person">
        <PersonAvatar name={p.name} imageSrc={resolveImage(p.image)} size="sm" />
        <span class="research-team__name">{p.name.split(' ')[0]}</span>
      </div>
    ))}
  </div>
</div>

<style>
  .research-team {
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-gray-100);
  }

  .research-team__heading {
    font-family: var(--font-heading);
    font-size: var(--size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-gray-300);
    margin-bottom: 1.25rem;
  }

  .research-team__row {
    display: flex;
    flex-wrap: wrap;
    gap: 1.75rem;
    align-items: flex-start;
  }

  .research-team__person {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .research-team__name {
    font-family: var(--font-heading);
    font-size: var(--size-xs);
    color: var(--color-gray-600);
    font-weight: 400;
  }
</style>
