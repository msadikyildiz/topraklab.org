---
import PersonAvatar from './PersonAvatar.astro';

interface Props {
  name: string;
  role: string;
  imageSrc?: ImageMetadata;
}

const { name, role, imageSrc } = Astro.props;
---

<div class="person-card">
  <PersonAvatar name={name} imageSrc={imageSrc} size="md" />
  <h3 class="person-card__name">{name}</h3>
  <p class="person-card__role">{role}</p>
</div>

<style>
  .person-card {
    text-align: center;
    width: 140px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .person-card__name {
    font-family: var(--font-heading);
    font-size: var(--size-sm);
    font-weight: 600;
    color: var(--color-gray-900);
    margin-top: 0.875rem;
    margin-bottom: 0.125rem;
    line-height: 1.3;
  }

  .person-card__role {
    font-size: var(--size-xs);
    color: var(--color-gray-300);
    margin-bottom: 0;
    line-height: 1.4;
  }
</style>
