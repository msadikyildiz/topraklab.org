---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  role: string;
  imageSrc?: ImageMetadata;
}

const { name, role, imageSrc } = Astro.props;
---

<div class="person-card">
  {imageSrc ? (
    <Image src={imageSrc} alt={name} width={160} height={180} class="person-card__photo" />
  ) : (
    <div class="person-card__placeholder" aria-hidden="true">
      <span>{name.charAt(0)}</span>
    </div>
  )}
  <h3 class="person-card__name">{name}</h3>
  <p class="person-card__role">{role}</p>
</div>

<style>
  .person-card {
    text-align: center;
    max-width: 180px;
  }

  .person-card__photo {
    width: 160px;
    height: 180px;
    object-fit: cover;
    margin-bottom: 0.75rem;
  }

  .person-card__placeholder {
    width: 160px;
    height: 180px;
    background-color: var(--color-gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
    font-family: var(--font-serif);
    font-size: var(--size-xl);
    color: var(--color-gray-300);
  }

  .person-card__name {
    font-family: var(--font-heading);
    font-size: var(--size-sm);
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: 0.125rem;
  }

  .person-card__role {
    font-size: var(--size-xs);
    color: var(--color-gray-300);
    margin-bottom: 0;
  }
</style>
