---
interface Props {
  title: string;
  description: string;
  href: string;
  label?: string;
}

const { title, description, href, label } = Astro.props;
---

<a href={href} class="tech-card">
  {label && <span class="tech-card__label">{label}</span>}
  <h3 class="tech-card__title">{title}</h3>
  <p class="tech-card__desc">{description}</p>
  <span class="tech-card__arrow" aria-hidden="true">&rarr;</span>
</a>

<style>
  .tech-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    border: 1px solid var(--color-gray-100);
    transition: border-color 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .tech-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 12px rgba(0, 46, 93, 0.06);
  }

  .tech-card:hover .tech-card__arrow {
    color: var(--color-accent);
    transform: translateX(4px);
  }

  .tech-card__label {
    display: inline-block;
    font-family: var(--font-heading);
    font-size: var(--size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
  }

  .tech-card__title {
    font-family: var(--font-heading);
    font-size: var(--size-lg);
    font-weight: 400;
    color: var(--color-gray-900);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .tech-card__desc {
    font-size: var(--size-sm);
    color: var(--color-gray-600);
    line-height: 1.6;
    flex: 1;
    margin-bottom: 1rem;
  }

  .tech-card__arrow {
    font-size: var(--size-lg);
    color: var(--color-gray-300);
    transition: color 0.2s, transform 0.2s;
    align-self: flex-end;
  }
</style>
